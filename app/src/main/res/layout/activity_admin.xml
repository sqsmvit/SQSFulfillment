<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sqsmv.sqsfulfillment.AdminActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <Button
        android:id="@+id/AdminBackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_button_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/AppUpdateButton"
            android:layout_width="@dimen/weight_field_size"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="App Update" />

        <Button
            android:id="@+id/ForceUpdateButton"
            android:layout_width="@dimen/weight_field_size"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="DB Update" />

        <Button
            android:id="@+id/ResetDBButton"
            android:layout_width="@dimen/weight_field_size"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Reset DB" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_activity_vertical_margin"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/weight_field_size"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="left"
            android:text="File Name" />

        <TextView
            android:layout_width="@dimen/weight_field_size"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:gravity="right"
            android:text="Date" />

        <TextView
            android:layout_width="@dimen/weight_field_size"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="right"
            android:text="Size" />
    </LinearLayout>

    <ListView
        android:id="@+id/BackupFileList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
